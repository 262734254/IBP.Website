@using IBP.Models;
@using IBP.Services;
@using IBP.Common;
@{
    Layout = "";
    string salesOrderId = Request.QueryString["sid"];
    string pagename = Request.QueryString["page"];

   SalesOrderDomainModel   SalesorModel = SalesOrderInfoService.Instance.GetSalesorderDomainModelById(salesOrderId, false);
   CustomerDomainModel Customer = CustomerInfoService.Instance.GetCustomerDomainModelById(SalesorModel.BasicInfo.CustomerId, false);
   CustomDataDomainModel Checkexception = CustomDataInfoService.Instance.GetCustomDataDomainModelByName("质检异常类型", false);
    }
<div class="pageContent">
	
	<form method="post" action="/OrderCenter/DoSalesOrderCheck" class="pageForm required-validate" onsubmit="return validateCallback(this, dialogAjaxDone)">
		 <input type="hidden" name="orderId" value="@salesOrderId" />
        <input type="hidden" name="page" value="@pagename" />
        <div class="pageFormContent" layoutH="58">
          <div class="information02">
             <h2>销售订单【@SalesorModel.SalesorderCode】质检操作</h2>
             <div class="New_box02">
                <dl>
                 <span>
                    <dd>客户姓名：</dd>
                    <dt><input  type="text" name="CustomerName"readonly="readonly" class="customPhone" value="@Customer.BasicInfo.CustomerName"   /></dt>
                  </span>
                  <span>
                    <dd>订单编号：</dd>
                    <dt><input type="text" name="pay_card_number"readonly="readonly"class="customPhone" value="@SalesorModel.BasicInfo.SalesorderCode"/></dt>
                  </span>
                  <span>
                    <dd>支付人姓名：</dd>
                    <dt><input type="text" name="pay_customer_name"readonly="readonly" class="customPhone" value="@SalesorModel.BasicInfo.PayCustomerName"  /></dt>
                  </span>  
                </dl>
                <dl>
                 <span style="width:240px">
                    <dd>付款方式：</dd>
                    <dt style="width:130px"><input style="width:130px" type="text" name=" pay_card_number"readonly="readonly" class="customPhone" value=" @(SalesorModel.OrderPaytypeName)"  /></dt>
                  </span>
                 <span>
                    <dd>扣款金额：</dd>
                    <dt><input type="text"name="pay_price"readonly="readonly" class="customPhone" value="@SalesorModel.BasicInfo.PayPrice" /></dt>
                </span>
                  <span>
                    <dd>扣款日期：</dd>
                    <dt><input type="text" readonly="readonly" class="customPhone" value="@SalesorModel.BasicInfo.ChargeTime" /></dt>
                  </span>
                </dl>
                <dl style="height: 75px;">
                    <dd>产品列表：</dd>
                    <dt><textarea readonly="readonly"  cols="50" rows="3"style="width:545px;">@SalesOrderInfoService.Instance.GetSalesorderProductNameList(SalesorModel)</textarea> </dt>
                </dl>
                <dl>
                    <dd>请选择：</dd>
                    <p><input type="radio" value="0" checked name="opType"  custjs="exceptionMgr"  />质检通过
                        <input type="radio" value="1" name="opType"  custjs="exceptionMgr"  />质检不通过
                        <input type="radio" value="2" name="opType"  custjs="exceptionMgr"  />质缓质检</p>
                </dl>
                <div id="Divexception"  class="hideClass">
                <dl>
                  <dd>异常原因：</dd>
                  <dt>
                   <select name="exceptionType" >
                    <option value="">请选择</option>
                        @{
                            if (Checkexception != null && Checkexception.ValueList.Count > 0)
                            {
                                foreach (CustomDataValueDomainModel item in Checkexception.ValueList.Values)
                                {
                            @:<option value="@item.ValueId">@item.DataValue</option>
                            }
                            }
                        }
                    </select>
                  </dt>
                </dl>
                <dl style="height: 75px;">
                    <dd>质检描述：</dd>
                    <dt><textarea name="opExceptionDesc" cols="50" rows="3" style="width:518px;"></textarea> </dt>
                </dl>
                </div>
             </div>

            </div>
		</div>
		<div class="formBar">
			<ul>
				<li><div class="buttonActive"><div class="buttonContent"><button type="submit">提交</button></div></div></li>
				<li><div class="button"><div class="buttonContent"><button type="button" class="close">取消</button></div></div></li>
			</ul>
		</div>
	</form>
	
</div>
