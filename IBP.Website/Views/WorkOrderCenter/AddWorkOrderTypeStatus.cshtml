@using IBP.Models;
@using IBP.Services;
@{
    Layout = "";
    string orderTypeId = Request.QueryString["tid"];
    if(string.IsNullOrEmpty(orderTypeId))
    {
        throw new Exception("新增工单类型状态异常，未获取到工单类型ID");
    }
}

<div class="pageContent">
	
	<form method="post" action="/WorkOrderCenter/DoNewWorkOrderTypeStatus" class="pageForm required-validate" onsubmit="return validateCallback(this, dialogAjaxDone)">
		<div class="pageFormContent" layoutH="58">
            <input type="hidden" name="workOrderTypeId" value="@orderTypeId" />
			<div class="unit">
				<label>流转名称：</label>
				<input type="text" name="statusName" size="30" minlength="3" maxlength="10" class="required" />
			</div>
            <div class="unit">
				<label>状态：</label>
				<input type="radio" value="0" checked name="status" />启用
		        <input type="radio" value="1" name="status" />禁用
			</div>
            <div class="unit">
				<label>标识：</label>
				<input type="radio" value="0" name="statustag" />开始
		        <input type="radio" value="1" checked name="statustag" />处理中
				<input type="radio" value="2" name="statustag" />关闭
			</div>
            <div class="unit">
				<label>特殊：</label>
                <select id="customtag" name="customtag">
                <option value="">无</option>
                <option value="待质检">待质检</option>
                <option value="处理中">处理中</option>
                <option value="已关闭">已关闭</option>
                <option value="待审批">待审批</option>
                <option value="未处理">未处理</option>
				</select>
			</div>
			<div class="unit">
				<label>描述：</label>
				<textarea name="statusDesc" cols="50" rows="5"></textarea>
			</div>
		</div>
		<div class="formBar">
			<ul>
				<li><div class="buttonActive"><div class="buttonContent"><button type="submit">提交</button></div></div></li>
				<li><div class="button"><div class="buttonContent"><button type="button" class="close">取消</button></div></div></li>
			</ul>
		</div>
	</form>
	
</div>