@using IBP.Models;
@using IBP.Services;
@{
    Layout = "";
    string orderTypeId = Request.QueryString["tid"];
    if(string.IsNullOrEmpty(orderTypeId))
    {
        throw new Exception("新增工单类型状态异常，未获取到工单类型ID");
    }
}

<div class="pageContent">
	
	<form method="post" action="/WorkOrderCenter/DoNewWorkOrderTypeResult" class="pageForm required-validate" onsubmit="return validateCallback(this, dialogAjaxDone)">
		<div class="pageFormContent" layoutH="58">
            <input type="hidden" name="workOrderTypeId" value="@orderTypeId" />
			<div class="unit">
				<label>结果名称：</label>
				<input type="text" name="resultName" size="30" minlength="3" maxlength="10" class="required" />
			</div>
            <div class="unit">
				<label>状态：</label>
				<input type="radio" value="0" checked name="status" />启用
		        <input type="radio" value="1" name="status" />禁用
			</div>
              <div class="unit">
				<label>是否开始：</label>
                <input type="radio" value="0"  name="isbegin" checked />是
		        <input type="radio" value="1" name="isbegin" />否
			</div>
			<div class="unit">
				<label>描述：</label>
				<textarea name="resultDesc" cols="60" rows="5"></textarea>
			</div>
		</div>
		<div class="formBar">
			<ul>
				<li><div class="buttonActive"><div class="buttonContent"><button type="submit">提交</button></div></div></li>
				<li><div class="button"><div class="buttonContent"><button type="button" class="close">取消</button></div></div></li>
			</ul>
		</div>
	</form>
	
</div>